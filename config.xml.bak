<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.com.calculadora" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Calculadora</name>
    <description>
       Una simple calculadora.
    </description>
    <author email="lbruzzidesarrollos@gmail.com" href="">
        Leandro Bruzzi
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <icon src="res/icono_calculadora.png" />
    
    <platform name="android">
    		<preference name="Orientation" value="portrait" />
        <allow-intent href="market:*" />
    </platform>
</widget>
